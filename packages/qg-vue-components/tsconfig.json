{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": false,
		"jsx": "preserve",
		"outDir": "./",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["lib/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["lib/**/*.vue","lib/**/*.ts"],
	"exclude": ["node_modules", "website"]
}
