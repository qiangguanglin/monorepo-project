{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": false,
		"jsx": "preserve",
		"outDir": ".",
		"strict": true,
		"moduleResolution": "node",
		"noEmitOnError": false,
		"baseUrl": ".",
		"paths": {
			"@/*": ["docs/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": ["docs/**/*.vue","docs/**/*.ts","docs/types/global-shims.d.ts", "docs/.vuepress/**/*.vue", "docs/.vuepress/**/*.ts"],
	"exclude": ["node_modules"]
}