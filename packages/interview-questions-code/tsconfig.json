{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "jsx": "preserve",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "lib/*"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}